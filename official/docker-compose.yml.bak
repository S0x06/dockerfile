
idbdata:
  image: ubuntu:12.04
  hostname: idbdata
  volumes:
    - ~/Documents/wwwroot:/home/vagrant/wwwroot
    - ~/Documents/Downloads:/home/vagrant/Downloads
    - ~/Documents/Downloads/databases/mysql:/var/lib/mysql
    - ./nginx/conf.d:/etc/nginx/conf.d

imysql55:
  image: mysql:5.5
  hostname: mysql55
  volumes_from:
    - idbdata
  ports:
    - "3306:3306"
  volumes:
    - ./mysql/mysql.conf:/etc/mysql/conf.d/mysql.conf
  environment:
    MYSQL_ALLOW_EMPTY_PASSWORD: "yes"

iredis:
  image: redis
  hostname: redis

irabbitmq:
  image: rabbitmq:3.6-management
  hostname: rabbitmq-3.6-management
  ports:
    - "15672:15672"
  environment:
    RABBITMQ_DEFAULT_USER: "admin"
    RABBITMQ_DEFAULT_PASS: "123456"

iphp56:
  image: official/php-5.6
  hostname: php-5-6
  volumes_from:
    - idbdata
  volumes:
    - ./php-5.6/php.ini:/usr/local/etc/php/php.ini
  links:
    - irabbitmq
    - imysql55
    - iredis

iphp7:
  image: official/php-7
  hostname: php-7
  volumes_from:
    - idbdata
  expose:
    - "9000"
  volumes:
    - ./php-7/php.ini:/usr/local/etc/php/php.ini
  links:
    - irabbitmq
    - imysql55
    - iredis

inginx:
  image: nginx
  hostname: inginx
  volumes_from:
    - idbdata
  ports:
    - "80:80"
  volumes:
    - ./nginx/nginx.conf:/etc/nginx/nginx.conf
  links:
    - irabbitmq
    - imysql55
    - iredis
    - iphp56
    - iphp7
